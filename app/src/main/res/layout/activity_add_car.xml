<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kree.keehoo.yourcarinfo.AddCarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_layout_main_info_id"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utwórz Nowy Samochód"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>

        <EditText
            android:id="@+id/car_brand_editText_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marka samochodu"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            />

        <EditText
            android:id="@+id/car_model_editText_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model samochodu"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>

        <EditText
            android:id="@+id/car_registration_number_editText_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numer rejestracyjny"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"/>


        <Button
            android:id="@+id/pick_insurance_start_date_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Wybierz datę rozpoczęcia ubezpieczenia" />
        <Button
            android:id="@+id/pick_tec_start_date_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Wybierz datę wykonania przeglądu" />

    </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sendButton_id"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="fill"
            android:text="Send" />

    </LinearLayout>

</RelativeLayout>
