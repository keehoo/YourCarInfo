<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <!-- item -->
    <TextView
        android:padding="3dp"
        android:id="@+id/recycler_view_item_brand_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="brand"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22dp"
        android:includeFontPadding="true"/>
    <!-- person name -->
    <TextView
        android:padding="3dp"
        android:id="@+id/recycler_view_item_model_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_item_brand_id"
        android:hint="model"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16dp" />

    <TextView
        android:padding="3dp"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/recycler_view_item_regNum_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_item_model_id"
        android:hint="regNum"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="data rozpoczęcia ubezpieczenia:"
        android:textSize="9dp"
        android:padding="3dp"
        android:id="@+id/text_ins_id"/>

    <TextView
        android:padding="3dp"
        android:id="@+id/date_of_insurance_start_long_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAlignment="gravity"
        android:gravity="right"
        android:hint="date of insurance start"
        android:textSize="14dp"
        android:layout_below="@+id/text_ins_id"/>

    <TextView
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:textSize="9dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date_of_insurance_start_long_id"
        android:text="data wykonania przeglądu:"
        android:id="@+id/text_tech_id"/>

    <TextView
        android:padding="3dp"
        android:id="@+id/date_od_technical_start_long_id"
        android:layout_width="wrap_content"
        android:textAlignment="gravity"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_tech_id"
        android:hint="Date of technical start" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/recycler_view_item_regNum_id"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

</RelativeLayout>